<div class="loginbox">
  <h2>Login</h2>
  <% form_for @user_session, :url => user_session_path do |f| %>

    <p><%= f.label :login %><br />
      <%= f.text_field :login, :size => 20 %></p>
    <p><%= f.label :password %><br />
      <%= f.password_field :password, :size => 20 %></p>

    <%= f.submit "logar" %>
  <% end %>
</div>
